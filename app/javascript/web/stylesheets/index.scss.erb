
// We set the site and bootstrap variables.
@import 'variables';

// Import the central site wide files.
@import 'site';
@import 'banner';
@import 'vendor';

// Then we import the page view styles that can come in any order.
<% Dir.chdir('app/javascript/web/stylesheets') do
     Dir.glob('views/**/*.scss' ).each do |file| %>
  @import '<%= file %>';
<% end; end %>

